                              SelectionMode="Single">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <Button Content="Move" Command="{Binding MoveToSelectedCommand}" Foreground="Gainsboro"/>
                        </StackPanel>

                        <TextBlock Grid.Row="7" Grid.Column="0" Foreground="Gainsboro" Margin="13,15,0,15">Ideal</TextBlock>
                        <TextBox Grid.Row="7" Grid.Column="1" Margin="100,11,100,12" Text="{Binding BackgroundIdeal, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Row="8" Grid.Column="0" Foreground="Gainsboro" Margin="13,10,0,20">Flaw</TextBlock>
                        <TextBox Grid.Row="8" Grid.Column="1" Margin="100,11,100,11" Text="{Binding BackgroundFlaw, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Row="9" Grid.Column="0" Foreground="Gainsboro" Margin="13,19,0,11">Bond</TextBlock>
                        <TextBox Grid.Row="9" Grid.Column="1" Margin="100,12,100,11" Text="{Binding BackgroundBond, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Grid.Row="10" Grid.Column="0" Foreground="Gainsboro" Margin="13,15,0,15">Select a Feat</TextBlock>
                        <!--<ComboBox Grid.Row="9" Grid.Column="1" 
                              SelectedItem="{Binding SelectedFeat}" 
                              ItemsSource="{Binding AvailableFeats}" Margin="5"/>-->
                        <Button Content="Save Background" 
                            Command="{Binding SaveBackgroundCommand}"
                            Grid.Row="11" Grid.Column="1" 
                            HorizontalAlignment="Left" Margin="37,5,0,6" Width="232" Foreground="Gainsboro" Grid.RowSpan="2"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Starting Equipment">
                    <Grid Margin="0,0,-7,0" Height="952" Width="auto">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="127*"/>
                            <ColumnDefinition Width="43*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Content="Choose Method to determine Starting Equipment" 
       Style="{StaticResource LightLabelStyle}" HorizontalAlignment="Center" Margin="0,15,0,15" Width="535"/>
                        <RadioButton Grid.Row="1" Grid.Column="0" Name="ClassBack" GroupName="Equip" Height="30">Class+Background</RadioButton>
                        <RadioButton Grid.Row="1" Grid.Column="1" Name="StartGold" GroupName="Equip" Height="30" RenderTransformOrigin="-0.778,0.546">Starting Gold</RadioButton>

                        <!-- Class + Background Visibility -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                   Visibility="{Binding IsChecked, ElementName=ClassBack, Converter={StaticResource convVisibility}}" Margin="0,15,0,15" Width="0"  Foreground="White">
            Class + Background
                        </TextBlock>

                        <!-- ListView for Selecting Starting Items Group -->
                        <ListView Grid.Column="0"
                  Visibility="{Binding IsChecked, ElementName=ClassBack, Converter={StaticResource convVisibility}}"  Foreground="White" Margin="23,10,341,10" Grid.Row="3">
                            ItemsSource="{Binding ChosenClass.StartingItemsOptions}"
                  SelectedItem="{Binding SelectedStartingItemsOption, Mode=TwoWay}"
                  SelectionMode="Single" Margin="10,44,10,44"  Foreground="White">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Starting Items Option:" FontWeight="Bold"  Foreground="White"/>
                                        <ListView ItemsSource="{Binding}" Height="112">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"  Foreground="White"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Starting Gold Visibility -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                   Visibility="{Binding IsChecked, ElementName=StartGold, Converter={StaticResource convVisibility}}" Margin="0,15,0,15" Width="0" Foreground="White" >
            Starting Gold
                        </TextBlock>

                        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0"
                    Visibility="{Binding IsChecked, ElementName=StartGold, Converter={StaticResource convVisibility}}" Margin="10,10,10,10">
                            <TextBlock Text="Your Character will gain: "  Foreground="White"/>
                            <TextBlock Text="{Binding ChosenClass.StartingGold}"  Foreground="White" />
                            <TextBlock Text=" Gold Coins" Foreground="White" />
                        </StackPanel>

                        <!-- Create Character Button -->
                        <Button Content="Create Character" Grid.Column="0" Grid.Row="4" 
        Command="{Binding CreateCharacterCommand}" Width="NaN" Foreground="Gainsboro" Margin="298,45,36,95"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </ScrollViewer>
</UserControl>
