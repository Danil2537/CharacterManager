                                <!-- Unselected Item Template -->
                                <DataTemplate x:Key="DefaultClassTemplate">
                                    <TextBlock FontSize="16" Margin="5,0" Text="{Binding Name}" />
                                </DataTemplate>

                                <!-- Selected Item Template -->
                                <DataTemplate x:Key="SelectedClassTemplate">
                                    <Grid Margin="16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <!-- avatar-->
                                            <RowDefinition></RowDefinition>
                                            <!-- name -->
                                            <RowDefinition></RowDefinition>
                                            <!-- source -->
                                            <RowDefinition></RowDefinition>
                                            <!-- hit dice -->
                                            <RowDefinition Height="auto"></RowDefinition>
                                            <!-- feats -->
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
